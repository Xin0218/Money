<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 連框顏色值 -->
    <item>
        <shape>
            <solid android:color="@color/black" />
        </shape>
    </item>
    <!-- 主體背景顏色值 -->
    <item
        android:bottom="2dp"
        android:end="2dp"
        android:start="2dp"
        android:top="2dp"> <!--設定只有頂部有邊框-->
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>